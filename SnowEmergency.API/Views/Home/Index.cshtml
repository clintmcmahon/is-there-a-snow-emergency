@model SnowEmergency.Models.ViewModels.SnowEmergencyAlert
@{
    ViewData["Title"] = "Index";
}

<div class="mt-4">
    <h1 class="text-center">Is There A Snow Emergency In Minneapolis?</h1>

    @if (Model.IsThereASnowEmergency)
    {
        <h1 class="font-weight-bold text-center">
            Yes
        </h1>
    }
    else
    {
<h1 class="font-weight-bold text-center">
    No
</h1>
    }

    <div class="pb-2 pt-2 text-center">
        @Model.Body
    </div>

    @if (Model.IsThereASnowEmergency)
    {
        <div class="pt-4 text-center">
            <a href="https://www.minneapolismn.gov/getting-around/snow/snow-emergencies/snow-parking-rules/">Follow The Snow Emergency Parking Rules</a>
        </div>
    }
    </div>
